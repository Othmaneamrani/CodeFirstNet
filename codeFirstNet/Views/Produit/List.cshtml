@model List<Produit>



<h2 class="mt-5 mb-5">Produits</h2>

@if (Model == null || Model.Count == 0)
{
    <p>Aucun produit trouvé.</p>
}
else
{
    <table class="table text-light">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Quantité</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produit in Model)
            {
                <tr>
                    <th scope="row">@produit.id</th>
                    <td>@produit.titre.First().ToString().ToUpper()@produit.titre.Substring(1)</td>
                    <td>@produit.categorie.First().ToString().ToUpper()@produit.categorie.Substring(1)</td>
                    <td>@produit.quantite</td>
                    <td>@produit.description.First().ToString().ToUpper()@produit.description.Substring(1)</td>
                    <td>
                        <a class="btn btn-primary" href="GetUpdate/@produit.id">Modifier</a>
                        <a class="btn ml-0 btn-danger" href="GetDelete/@produit.id">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
